<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>Latest Events Teaser</name>
	<creationDate>20/02/2010</creationDate>
	<author>ezuri.de</author>
	<copyright>GNU General Public License</copyright>
	<authorEmail>info@ezuri.de</authorEmail>
	<authorUrl>http://www.ezuri.de/</authorUrl>
	<version>1.0.0</version>
	<description>EventList Teaser Module based on Eventlist Wide Modul from schlu.net</description>

	<files>
		<filename module="mod_eventlist_teaser">mod_eventlist_teaser.php</filename>
		<filename>index.html</filename>
    <filename>helper.php</filename>
        <folder>tmpl</folder>
        <filename>tmpl/index.html</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/mod_eventlist_teaser.css</filename>
        <filename>tmpl/red.css</filename>
        <filename>tmpl/blue.css</filename>
        <filename>tmpl/green.css</filename>
        <folder>tmpl/img</folder>
        <filename>tmpl/img/index.html</filename>
        <filename>tmpl/img/calendar_red.png</filename>
        <filename>tmpl/img/calendar_blue.png</filename>
        <filename>tmpl/img/calendar_green.png</filename>        
        <filename>tmpl/img/calendar_green2.png</filename>
        <filename>tmpl/img/facebook.png</filename>
        <filename>tmpl/img/twitter.png</filename>
        <filename>tmpl/img/digg.png</filename>
	</files>

	<languages>
		<language tag="en-GB">languages/en-GB.mod_eventlist_teaser.ini</language>
		<language tag="de-DE">languages/de-DE.mod_eventlist_teaser.ini</language>
    <language tag="it-IT">languages/it-IT.mod_eventlist_teaser.ini</language>	
    <language tag="ja-JP">languages/ja-JP.mod_eventlist_teaser.ini</language>	
	</languages>

	<params>
		<param name="type" type="list" default="1" label="UPCOMING ARCHIVED OR CURRENT" description="UPCOMING ARCHIVED OR CURRENT DESC">
			<option value="1">UPCOMING EVENTS</option>
			<option value="2">ARCHIVED EVENTS</option>
			<option value="3">CURRENT EVENTS</option>
		</param>
		<param name="layout" type="list" default="1" label="LAYOUT" description="LAYOUT DESC">
			<option value="1">LAYOUT1</option>
		</param>		
		<param name="color" type="list" default="1" label="COLOR" description="COLOR DESC">
			<option value="1">RED</option>
			<option value="2">BLUE</option>
			<option value="3">GREEN</option>
		</param>				
		<param name="count" type="text" default="5" label="EVENTS IN MODULE" description="EVENTS IN MODULE DESC" />				
		<param name="cuttitle" type="text" default="35" label="MAX TITLE LENGTH" description="MAX TITLE LENGTH DESC" />
		<param name="descriptionlength" type="text" default="300" label="MAX DESCRIPTION LENGTH" description="MAX DESCRIPTION LENGTH DESC" />		
		<param name="br" type="radio" default="0" label="ALLOW LINEBREAK" description="ALLOW LINEBREAK DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>		
		<param name="ainfo" type="radio" default="1" label="ADDITIONAL INFORMATION" description="ADDITIONAL INFORMATION DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="linkfb" type="radio" default="1" label="LINK TO FB" description="LINK TO FB DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="linktw" type="radio" default="1" label="LINK TO TWITTER" description="LINK TO TWITTER DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>		
		<param name="linkdi" type="radio" default="1" label="LINK TO DIGG" description="LINK TO DIGG DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>	        		
		<param name="catid" type="text" default="" label="CATEGORY ID" description="CATEGORY ID DESC" />
		<param name="venid" type="text" default="" label="VENUE ID" description="VENUE ID DESC" />

		<param name="stateloc" type="text" default="" label="STATE" description="STATE DESC" />
		<param name="use_modal" type="radio" default="1" label="USE MODAL" description="USE MODAL DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>

		
	</params>
	
	
	<params group="advanced">
		<param name="cache" type="list" default="1" label="CACHING" description="CACHING DESC">
			<option value="1">USE GLOBAL</option>
			<option value="0">NO CACHING</option>
		</param>
		<param name="cache_time" type="text" default="900" label="CACHE TIME" description="CACHE TIME DESC" />
	</params>

</install>
