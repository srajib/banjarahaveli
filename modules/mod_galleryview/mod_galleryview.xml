<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
        <name>Gallery View</name> 
        <author>Yash Vyas</author> 
        <creationDate>2010-04-24</creationDate> 		  
        <copyright>All rights reserved by Yash Vyas 2010.</copyright>  
        <license>GPL 2.0</license> 
        <authorEmail>contact@yashvyas.in</authorEmail>  
        <authorUrl>www.yashvyas.in</authorUrl> 
        <version>1.0.3</version>  
        <description>
			Gallery View. With scolling on bottom and preview on top.
			|  Upload your images to gallery folder.
			|  Folder Path : Modules/mod_galleryview/gallery 
			|  Any issue contact me on : contact@yashvyas.in
		</description>
        <files>
                <filename module="mod_galleryview">mod_galleryview.php</filename>
                <filename>index.html</filename>
                <filename>helper.php</filename>
                <filename>tmpl/default.php</filename>
                <filename>tmpl/index.html</filename>				
				<filename>js/jquery-1.3.2.min.js</filename>
				<filename>js/jquery.easing.1.3.js</filename>
				<filename>js/jquery.galleryview-1.1-pack.js</filename>
				<filename>js/jquery.galleryview-1.1.js</filename>
				<filename>js/jquery.timers-1.1.2.js</filename>				
				<filename>js/index.html</filename>
				<filename>js/themes/dark/next.png</filename>
				<filename>js/themes/dark/prev.png</filename>
				<filename>js/themes/dark/panel-nav-next.png</filename>
				<filename>js/themes/dark/panel-nav-prev.png</filename>
				<filename>js/themes/dark/pointer.png</filename>
				<filename>js/themes/dark/index.html</filename>
				<filename>js/themes/light/next.png</filename>
				<filename>js/themes/light/prev.png</filename>
				<filename>js/themes/light/pointer.png</filename>
				<filename>js/themes/light/panel-nav-next.png</filename>
				<filename>js/themes/light/panel-nav-prev.png</filename>
				<filename>js/themes/light/index.html</filename>				
				<filename>gallery/01.jpg</filename>
				<filename>gallery/02.jpg</filename>
				<filename>gallery/03.jpg</filename>
				<filename>gallery/04.jpg</filename>
				<filename>gallery/05.jpg</filename>
				<filename>gallery/06.jpg</filename>
				<filename>gallery/07.jpg</filename>
				<filename>gallery/08.jpg</filename>
				<filename>gallery/thumb/01_thumb.jpg</filename>
				<filename>gallery/thumb/02_thumb.jpg</filename>
				<filename>gallery/thumb/03_thumb.jpg</filename>
				<filename>gallery/thumb/04_thumb.jpg</filename>
				<filename>gallery/thumb/05_thumb.jpg</filename>
				<filename>gallery/thumb/06_thumb.jpg</filename>
				<filename>gallery/thumb/07_thumb.jpg</filename>
				<filename>gallery/thumb/08_thumb.jpg</filename>
				<filename>gallery/thumb/index.html</filename>
				<filename>gallery/index.html</filename>
        </files>
 		
   
 
    <!-- Optional parameters -->
    <params>
        <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
        <param name="@spacer" type="spacer" default="" label="" description="" />	
		<param name="loadjq" type="list" default="1" label="LOAD jQuery" description="DESCLOADJQUERY">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="load_scripts" type="list" default="1" label="LOAD other scripts" description="PARAMLOADOTHERSCRIPTS">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="uniuqe_id" type="text" default="" label="UNIQUE ID" description="PARAMTUNIQUEID" />
		<param name="path" type="text" default="modules/mod_galleryview/gallery" label="IMAGE PATH" description="IMAGEPATH" />
		<param name="@spacer" type="spacer" default="" label="" description="" />	
		<param name="height" type="text" default="300" label="HEIGHT (PX)" description="PARAMHEIGHTPX" /> 
		<param name="width" type="text" default="800" label="WIDTH (PX)" description="PARAMWIDTHPX" />
		<param name="theme" type="list" default="light" label="THEME" description="PARAMTHEM">
			<option value="dark">Dark</option>
			<option value="light">Light</option>
		</param>		
		<param name="show_film" type="list" default="1" label="Show Filmstrip" description="PARAMSHOWFILMSTRIP">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="thumb_gen" type="list" default="0" label="THUMBNAIL GENERATE" description="PARAMTHUBNAILGENERATE">
			<option value="1">Manual</option>
			<option value="0">Auto</option>
		</param>		
		<param name="transition_interval" type="text" default="6000" label="TRANSITION INTERVAL" description="Set 0 to stop auto transition" /> 
		<param name="thumb_width" type="text" default="80" label="THUMB WIDTH (PX)" description="PARAMTHUMBWIDTHPX" /> 
		<param name="trans_speed" type="text" default="400" label="TRANSITION SPEED (MS)" description="PARAMTRANSSPEED" /> 
		<param name="bgcolor" type="text" default="#000000" label="BACKGROUND COLOR" description="PARAMTBGCOLOR" />
		<param name="border_color" type="text" default="#000000" label="BORDER COLOR" description="PARAMTBORDERCOLOR" />
    </params>
</install>